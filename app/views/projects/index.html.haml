.container
  .row
    .col-md-12
      %h4 Projects
      .table-responsive
        %table#mytable.table.table-bordred.table-striped
          %thead
            %th Name
            %th Client Name
            %th Category
            %th Edit
          %tbody
            - @projects.each do |project|
              %tr
                %td= project.name
                %td= project.client_name
                %td= project.category
                %td
                  = link_to edit_project_path(project) do
                    %i.fa.fa-pencil-square-o.fa-2x{"aria-hidden" => "true"}
  .row
    = link_to 'New Project', new_project_path